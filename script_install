##CentOS6_MySQL##
##################
cent6_mysql_menu()
{
while :
do
        clear && echo ""
echo "                  ..                                                      "
echo "                .PLTJ.                                                    "
echo "               <><><><>                                                   "
echo "      KKSSV' 4KKK LJ KKKL.'VSSKK           CCCC  EEEEEE  NN   NN  TTTTTT  "
echo "      KKV' 4KKKKK LJ KKKKAL 'VKK         CC      EE      NNN  NN    TT    "
echo "      V' ' 'VKKKK LJ KKKKV' ' 'V        CC       EEEEE   NNNN NN    TT    "
echo "      .4MA.' 'VKK LJ KKV' '.4Mb.         CC      EE      NN NNNN    TT    "
echo "    . KKKKKA.' 'V LJ V' '.4KKKKK .         CCCC  EEEEEE  NN   NN    TT    "
echo "  .4D KKKKKKKA.'' LJ ''.4KKKKKKK FA.                                      "
echo " <QDD ++++++++++++  ++++++++++++ GFD>                                     "
echo "  'VD KKKKKKKK'.. LJ ..'KKKKKKKK FV                                       "
echo "    ' VKKKKK'. .4 LJ K. .'KKKKKV '                                        "
echo "       'VK'. .4KK LJ KKA. .'KV'                                           "
echo "      A. . .4KKKK LJ KKKKA. . .4                                          "
echo "      KKA. 'KKKKK LJ KKKKK' .4KK                                          "
echo "      KKSSA. VKKK LJ KKKV .4SSKK                                          "
echo "               <><><><>                                                   "
echo "                'MKKM'                                                    "
echo "                  ''                                                      "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Install MySQL "
echo " 2) Back "
read -p "Select an option [1-2]: " option
echo ""
case $option in
1)
read -p "Do you want to Install MySQL? [y/n]: " -e -i n cent6_mysql
if [[ "$cent6_mysql" = 'y' ]]; then
	yum install epel* -y
	yum install mysql-server mysql -y
	service mysqld start
	chkconfig mysqld on
	/usr/bin/mysql_secure_installation
	service mysqld restart
else
	cent6_menu
fi
exit
;;
2)
	cent6_menu
exit
;;

esac
done
}
##################

##CentOS6_phpMyAdmin##
##################
cent6_phpmyadmin_menu()
{
while :
do
        clear && echo ""
echo "                  ..                                                      "
echo "                .PLTJ.                                                    "
echo "               <><><><>                                                   "
echo "      KKSSV' 4KKK LJ KKKL.'VSSKK           CCCC  EEEEEE  NN   NN  TTTTTT  "
echo "      KKV' 4KKKKK LJ KKKKAL 'VKK         CC      EE      NNN  NN    TT    "
echo "      V' ' 'VKKKK LJ KKKKV' ' 'V        CC       EEEEE   NNNN NN    TT    "
echo "      .4MA.' 'VKK LJ KKV' '.4Mb.         CC      EE      NN NNNN    TT    "
echo "    . KKKKKA.' 'V LJ V' '.4KKKKK .         CCCC  EEEEEE  NN   NN    TT    "
echo "  .4D KKKKKKKA.'' LJ ''.4KKKKKKK FA.                                      "
echo " <QDD ++++++++++++  ++++++++++++ GFD>                                     "
echo "  'VD KKKKKKKK'.. LJ ..'KKKKKKKK FV                                       "
echo "    ' VKKKKK'. .4 LJ K. .'KKKKKV '                                        "
echo "       'VK'. .4KK LJ KKA. .'KV'                                           "
echo "      A. . .4KKKK LJ KKKKA. . .4                                          "
echo "      KKA. 'KKKKK LJ KKKKK' .4KK                                          "
echo "      KKSSA. VKKK LJ KKKV .4SSKK                                          "
echo "               <><><><>                                                   "
echo "                'MKKM'                                                    "
echo "                  ''                                                      "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Install phpMyAdmin "
echo " 2) Back "
read -p "Select an option [1-2]: " option
echo ""
case $option in
1)
read -p "Do you want to install phpMyAdmin? [y/n]: " -e -i n cent6_phpmyadmin
if [[ "$cent6_phpmyadmin" = 'y' ]]; then
yum install epel* -y
yum install phpmyadmin -y
PHPMYADMIN="All"
DIR_PHPMYADMIN=/etc/httpd/conf.d/
echo "# phpMyAdmin - Web based MySQL browser written in php
#
# Allows only localhost by default
#
# But allowing phpMyAdmin to anyone other than localhost should be considered
# dangerous unless properly secured by SSL

Alias /phpMyAdmin /usr/share/phpMyAdmin
Alias /phpmyadmin /usr/share/phpMyAdmin

<Directory /usr/share/phpMyAdmin/>
   AddDefaultCharset UTF-8

   <IfModule mod_authz_core.c>
     # Apache 2.4
     <RequireAny>
       Require ip 127.0.0.1
       Require ip ::1
     </RequireAny>
   </IfModule>
   <IfModule !mod_authz_core.c>
     # Apache 2.2
     Order Deny,Allow
     Allow from $PHPMYADMIN
     Allow from ::1
   </IfModule>
</Directory>

<Directory /usr/share/phpMyAdmin/setup/>
   <IfModule mod_authz_core.c>
     # Apache 2.4
     <RequireAny>
       Require ip 127.0.0.1
       Require ip ::1
     </RequireAny>
   </IfModule>
   <IfModule !mod_authz_core.c>
     # Apache 2.2
     Order Deny,Allow
     Deny from All
     Allow from 127.0.0.1
     Allow from ::1
   </IfModule>
</Directory>

# These directories do not require access over HTTP - taken from the original
# phpMyAdmin upstream tarball
#
<Directory /usr/share/phpMyAdmin/libraries/>
    Order Deny,Allow
    Deny from All
    Allow from None
</Directory>

<Directory /usr/share/phpMyAdmin/setup/lib/>
    Order Deny,Allow
    Deny from All
    Allow from None
</Directory>

<Directory /usr/share/phpMyAdmin/setup/frames/>
    Order Deny,Allow
    Deny from All
    Allow from None
</Directory>

# This configuration prevents mod_security at phpMyAdmin directories from
# filtering SQL etc.  This may break your mod_security implementation.
#
#<IfModule mod_security.c>
#    <Directory /usr/share/phpMyAdmin/>
#        SecRuleInheritance Off
#    </Directory>
#</IfModule>" > $DIR_PHPMYADMIN/phpMyAdmin.conf
service httpd restart
else
	cent6_menu
fi
exit
;;
2)
	cent6_menu
exit
;;

esac
done
}
##################

##CentOS6_Desktop##
##################
cent6_desktop_menu()
{
while :
do
        clear && echo ""
echo "                  ..                                                      "
echo "                .PLTJ.                                                    "
echo "               <><><><>                                                   "
echo "      KKSSV' 4KKK LJ KKKL.'VSSKK           CCCC  EEEEEE  NN   NN  TTTTTT  "
echo "      KKV' 4KKKKK LJ KKKKAL 'VKK         CC      EE      NNN  NN    TT    "
echo "      V' ' 'VKKKK LJ KKKKV' ' 'V        CC       EEEEE   NNNN NN    TT    "
echo "      .4MA.' 'VKK LJ KKV' '.4Mb.         CC      EE      NN NNNN    TT    "
echo "    . KKKKKA.' 'V LJ V' '.4KKKKK .         CCCC  EEEEEE  NN   NN    TT    "
echo "  .4D KKKKKKKA.'' LJ ''.4KKKKKKK FA.                                      "
echo " <QDD ++++++++++++  ++++++++++++ GFD>                                     "
echo "  'VD KKKKKKKK'.. LJ ..'KKKKKKKK FV                                       "
echo "    ' VKKKKK'. .4 LJ K. .'KKKKKV '                                        "
echo "       'VK'. .4KK LJ KKA. .'KV'                                           "
echo "      A. . .4KKKK LJ KKKKA. . .4                                          "
echo "      KKA. 'KKKKK LJ KKKKK' .4KK                                          "
echo "      KKSSA. VKKK LJ KKKV .4SSKK                                          "
echo "               <><><><>                                                   "
echo "                'MKKM'                                                    "
echo "                  ''                                                      "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Install Desktop "
echo " 2) Back "
read -p "Select an option [1-2]: " option
echo ""
case $option in
1)
read -p "Do you want to Install Desktop? [y/n]: " -e -i n cent6_desktop
if [[ "$cent6_desktop" = 'y' ]]; then
yum install epel* -y
yum groupinstall "Desktop" "X Window System" -y
DESKTOP="5"
DIR_DESKTOP=/etc/
echo "# inittab is only used by upstart for the default runlevel.
#
# ADDING OTHER CONFIGURATION HERE WILL HAVE NO EFFECT ON YOUR SYSTEM.
#
# System initialization is started by /etc/init/rcS.conf
#
# Individual runlevels are started by /etc/init/rc.conf
#
# Ctrl-Alt-Delete is handled by /etc/init/control-alt-delete.conf
#
# Terminal gettys are handled by /etc/init/tty.conf and /etc/init/serial.conf,
# with configuration in /etc/sysconfig/init.
#
# For information on how to write upstart event handlers, or how
# upstart works, see init(5), init(8), and initctl(8).
#
# Default runlevel. The runlevels used are:
#   0 - halt (Do NOT set initdefault to this)
#   1 - Single user mode
#   2 - Multiuser, without NFS (The same as 3, if you do not have networking)
#   3 - Full multiuser mode
#   4 - unused
#   5 - X11
#   6 - reboot (Do NOT set initdefault to this)
#
id:$DESKTOP:initdefault:" > $DIR_DESKTOP/inittab
cd /etc/
init 6
else
	cent6_menu
fi
exit
;;
2)
	cent6_menu
exit
;;

esac
done
}
##################

##CentOS6_Remote_Desktop##
##################
cent6_remote_menu()
{
while :
do
        clear && echo ""
echo "                  ..                                                      "
echo "                .PLTJ.                                                    "
echo "               <><><><>                                                   "
echo "      KKSSV' 4KKK LJ KKKL.'VSSKK           CCCC  EEEEEE  NN   NN  TTTTTT  "
echo "      KKV' 4KKKKK LJ KKKKAL 'VKK         CC      EE      NNN  NN    TT    "
echo "      V' ' 'VKKKK LJ KKKKV' ' 'V        CC       EEEEE   NNNN NN    TT    "
echo "      .4MA.' 'VKK LJ KKV' '.4Mb.         CC      EE      NN NNNN    TT    "
echo "    . KKKKKA.' 'V LJ V' '.4KKKKK .         CCCC  EEEEEE  NN   NN    TT    "
echo "  .4D KKKKKKKA.'' LJ ''.4KKKKKKK FA.                                      "
echo " <QDD ++++++++++++  ++++++++++++ GFD>                                     "
echo "  'VD KKKKKKKK'.. LJ ..'KKKKKKKK FV                                       "
echo "    ' VKKKKK'. .4 LJ K. .'KKKKKV '                                        "
echo "       'VK'. .4KK LJ KKA. .'KV'                                           "
echo "      A. . .4KKKK LJ KKKKA. . .4                                          "
echo "      KKA. 'KKKKK LJ KKKKK' .4KK                                          "
echo "      KKSSA. VKKK LJ KKKV .4SSKK                                          "
echo "               <><><><>                                                   "
echo "                'MKKM'                                                    "
echo "                  ''                                                      "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Install Remote Desktop "
echo " 2) Back "
read -p "Select an option [1-2]: " option
echo ""
case $option in
1)
read -p "Do you want to Install Remote Desktop? [y/n]: " -e -i n cent6_remote
if [[ "$cent6_remote" = 'y' ]]; then
RESOLV="nameserver 103.22.180.7"
RESOLV1="nameserver 103.22.180.8"
DIR_RESOLV=/etc/
echo "# Generated by NetworkManager
$RESOLV
$RESOLV1
# No nameservers found; try putting DNS servers into your
# ifcfg files in /etc/sysconfig/network-scripts like so:
#
# DNS1=xxx.xxx.xxx.xxx
# DNS2=xxx.xxx.xxx.xxx
# DOMAIN=lab.foo.com bar.foo.com" > $DIR_RESOLV/resolv.conf
rpm -Uvh http://download.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm
yum install xrdp tigervnc-server -y
service xrdp start
chkconfig xrdp on
chkconfig vncserver on
else
	cent6_menu
fi
exit
;;
2)
cent6_menu
exit
;;

esac
done
}
##################

##CentOS6_All_Program##
##################
cent6_all_menu()
{
while :
do
        clear && echo ""
echo "                  ..                                                      "
echo "                .PLTJ.                                                    "
echo "               <><><><>                                                   "
echo "      KKSSV' 4KKK LJ KKKL.'VSSKK           CCCC  EEEEEE  NN   NN  TTTTTT  "
echo "      KKV' 4KKKKK LJ KKKKAL 'VKK         CC      EE      NNN  NN    TT    "
echo "      V' ' 'VKKKK LJ KKKKV' ' 'V        CC       EEEEE   NNNN NN    TT    "
echo "      .4MA.' 'VKK LJ KKV' '.4Mb.         CC      EE      NN NNNN    TT    "
echo "    . KKKKKA.' 'V LJ V' '.4KKKKK .         CCCC  EEEEEE  NN   NN    TT    "
echo "  .4D KKKKKKKA.'' LJ ''.4KKKKKKK FA.                                      "
echo " <QDD ++++++++++++  ++++++++++++ GFD>                                     "
echo "  'VD KKKKKKKK'.. LJ ..'KKKKKKKK FV                                       "
echo "    ' VKKKKK'. .4 LJ K. .'KKKKKV '                                        "
echo "       'VK'. .4KK LJ KKA. .'KV'                                           "
echo "      A. . .4KKKK LJ KKKKA. . .4                                          "
echo "      KKA. 'KKKKK LJ KKKKK' .4KK                                          "
echo "      KKSSA. VKKK LJ KKKV .4SSKK                                          "
echo "               <><><><>                                                   "
echo "                'MKKM'                                                    "
echo "                  ''                                                      "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Install All Program & PHP Version 5.3 "
echo " 2) Install All Program & PHP Version 5.4 "
echo " 3) Install All Program & PHP Version 5.5 "
echo " 4) Install All Program & PHP Version 5.6 "
echo " 5) Back "
read -p "Select an option [1-5]: " option
echo ""
case $option in
1)
read -p "Do you want to Install All Program & PHP Version 5.3? [y/n]: " -e -i n cent6_all_php53
if [[ "$cent6_all_php53" = 'y' ]]; then
yum update -y
yum install epel* -y
yum install net-tools ntp wget git htop telnet tcpdump traceroute -y
service ntpd start
chkconfig ntpd on
#Apache
yum install epel* -y
yum install httpd -y
service httpd start
chkconfig httpd on
#PHP
wget http://dl.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm
wget http://rpms.famillecollet.com/enterprise/remi-release-6.rpm
rpm -Uvh epel-release-6-8.noarch.rpm
yum install php php-mcrypt php-cli php-gd php-curl php-mysql php-ldap php-zip php-fileinfo -y
php -v
#MySQL
yum install epel* -y
yum install mysql-server mysql -y
service mysqld start
chkconfig mysqld on
/usr/bin/mysql_secure_installation
service mysqld restart
#phpMyAdmin
yum install epel* -y
yum install phpmyadmin -y
PHPMYADMIN="All"
DIR_PHPMYADMIN=/etc/httpd/conf.d/
echo "# phpMyAdmin - Web based MySQL browser written in php
#
# Allows only localhost by default
#
# But allowing phpMyAdmin to anyone other than localhost should be considered
# dangerous unless properly secured by SSL

Alias /phpMyAdmin /usr/share/phpMyAdmin
Alias /phpmyadmin /usr/share/phpMyAdmin

<Directory /usr/share/phpMyAdmin/>
   AddDefaultCharset UTF-8

   <IfModule mod_authz_core.c>
     # Apache 2.4
     <RequireAny>
       Require ip 127.0.0.1
       Require ip ::1
     </RequireAny>
   </IfModule>
   <IfModule !mod_authz_core.c>
     # Apache 2.2
     Order Deny,Allow
     Allow from $PHPMYADMIN
     Allow from ::1
   </IfModule>
</Directory>

<Directory /usr/share/phpMyAdmin/setup/>
   <IfModule mod_authz_core.c>
     # Apache 2.4
     <RequireAny>
       Require ip 127.0.0.1
       Require ip ::1
     </RequireAny>
   </IfModule>
   <IfModule !mod_authz_core.c>
     # Apache 2.2
     Order Deny,Allow
     Deny from All
     Allow from 127.0.0.1
     Allow from ::1
   </IfModule>
</Directory>

# These directories do not require access over HTTP - taken from the original
# phpMyAdmin upstream tarball
#
<Directory /usr/share/phpMyAdmin/libraries/>
    Order Deny,Allow
    Deny from All
    Allow from None
</Directory>

<Directory /usr/share/phpMyAdmin/setup/lib/>
    Order Deny,Allow
    Deny from All
    Allow from None
</Directory>

<Directory /usr/share/phpMyAdmin/setup/frames/>
    Order Deny,Allow
    Deny from All
    Allow from None
</Directory>

# This configuration prevents mod_security at phpMyAdmin directories from
# filtering SQL etc.  This may break your mod_security implementation.
#
#<IfModule mod_security.c>
#    <Directory /usr/share/phpMyAdmin/>
#        SecRuleInheritance Off
#    </Directory>
#</IfModule>" > $DIR_PHPMYADMIN/phpMyAdmin.conf
service httpd restart
#Remote
rpm -Uvh http://download.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm
yum install xrdp tigervnc-server -y
service xrdp start
chkconfig xrdp on
chkconfig vncserver on
#Desktop
yum install epel* -y
yum groupinstall "Desktop" "X Window System" -y
DESKTOP="5"
DIR_DESKTOP=/etc/
echo "# inittab is only used by upstart for the default runlevel.
#
# ADDING OTHER CONFIGURATION HERE WILL HAVE NO EFFECT ON YOUR SYSTEM.
#
# System initialization is started by /etc/init/rcS.conf
#
# Individual runlevels are started by /etc/init/rc.conf
#
# Ctrl-Alt-Delete is handled by /etc/init/control-alt-delete.conf
#
# Terminal gettys are handled by /etc/init/tty.conf and /etc/init/serial.conf,
# with configuration in /etc/sysconfig/init.
#
# For information on how to write upstart event handlers, or how
# upstart works, see init(5), init(8), and initctl(8).
#
# Default runlevel. The runlevels used are:
#   0 - halt (Do NOT set initdefault to this)
#   1 - Single user mode
#   2 - Multiuser, without NFS (The same as 3, if you do not have networking)
#   3 - Full multiuser mode
#   4 - unused
#   5 - X11
#   6 - reboot (Do NOT set initdefault to this)
#
id:$DESKTOP:initdefault:" > $DIR_DESKTOP/inittab
cd /etc/
init 6
else
	cent6_menu
fi
exit
;;
2)
read -p "Do you want to Install All Program & PHP Version 5.4? [y/n]: " -e -i n cent6_all_php54
if [[ "$cent6_all_php54" = 'y' ]]; then
yum update -y
yum install epel* -y
yum install net-tools ntp wget git htop telnet tcpdump traceroute -y
service ntpd start
chkconfig ntpd on
#Apache
yum install epel* -y
yum install httpd -y
service httpd start
chkconfig httpd on
#PHP
wget http://dl.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm
wget http://rpms.famillecollet.com/enterprise/remi-release-6.rpm
rpm -Uvh epel-release-6-8.noarch.rpm
rpm -Uvh remi-release-6*.rpm
yum install yum-utils -y
yum-config-manager --enable remi-php54
yum install php php-mcrypt php-cli php-gd php-curl php-mysql php-ldap php-zip php-fileinfo -y
php -v
#MySQL
yum install epel* -y
yum install mysql-server mysql -y
service mysqld start
chkconfig mysqld on
/usr/bin/mysql_secure_installation
service mysqld restart
#phpMyAdmin
yum install epel* -y
yum install phpmyadmin -y
PHPMYADMIN="All"
DIR_PHPMYADMIN=/etc/httpd/conf.d/
echo "# phpMyAdmin - Web based MySQL browser written in php
#
# Allows only localhost by default
#
# But allowing phpMyAdmin to anyone other than localhost should be considered
# dangerous unless properly secured by SSL

Alias /phpMyAdmin /usr/share/phpMyAdmin
Alias /phpmyadmin /usr/share/phpMyAdmin

<Directory /usr/share/phpMyAdmin/>
   AddDefaultCharset UTF-8

   <IfModule mod_authz_core.c>
     # Apache 2.4
     <RequireAny>
       Require ip 127.0.0.1
       Require ip ::1
     </RequireAny>
   </IfModule>
   <IfModule !mod_authz_core.c>
     # Apache 2.2
     Order Deny,Allow
     Allow from $PHPMYADMIN
     Allow from ::1
   </IfModule>
</Directory>

<Directory /usr/share/phpMyAdmin/setup/>
   <IfModule mod_authz_core.c>
     # Apache 2.4
     <RequireAny>
       Require ip 127.0.0.1
       Require ip ::1
     </RequireAny>
   </IfModule>
   <IfModule !mod_authz_core.c>
     # Apache 2.2
     Order Deny,Allow
     Deny from All
     Allow from 127.0.0.1
     Allow from ::1
   </IfModule>
</Directory>

# These directories do not require access over HTTP - taken from the original
# phpMyAdmin upstream tarball
#
<Directory /usr/share/phpMyAdmin/libraries/>
    Order Deny,Allow
    Deny from All
    Allow from None
</Directory>

<Directory /usr/share/phpMyAdmin/setup/lib/>
    Order Deny,Allow
    Deny from All
    Allow from None
</Directory>

<Directory /usr/share/phpMyAdmin/setup/frames/>
    Order Deny,Allow
    Deny from All
    Allow from None
</Directory>

# This configuration prevents mod_security at phpMyAdmin directories from
# filtering SQL etc.  This may break your mod_security implementation.
#
#<IfModule mod_security.c>
#    <Directory /usr/share/phpMyAdmin/>
#        SecRuleInheritance Off
#    </Directory>
#</IfModule>" > $DIR_PHPMYADMIN/phpMyAdmin.conf
service httpd restart
#Remote
rpm -Uvh http://download.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm
yum install xrdp tigervnc-server -y
service xrdp start
chkconfig xrdp on
chkconfig vncserver on
#Desktop
yum install epel* -y
yum groupinstall "Desktop" "X Window System" -y
DESKTOP="5"
DIR_DESKTOP=/etc/
echo "# inittab is only used by upstart for the default runlevel.
#
# ADDING OTHER CONFIGURATION HERE WILL HAVE NO EFFECT ON YOUR SYSTEM.
#
# System initialization is started by /etc/init/rcS.conf
#
# Individual runlevels are started by /etc/init/rc.conf
#
# Ctrl-Alt-Delete is handled by /etc/init/control-alt-delete.conf
#
# Terminal gettys are handled by /etc/init/tty.conf and /etc/init/serial.conf,
# with configuration in /etc/sysconfig/init.
#
# For information on how to write upstart event handlers, or how
# upstart works, see init(5), init(8), and initctl(8).
#
# Default runlevel. The runlevels used are:
#   0 - halt (Do NOT set initdefault to this)
#   1 - Single user mode
#   2 - Multiuser, without NFS (The same as 3, if you do not have networking)
#   3 - Full multiuser mode
#   4 - unused
#   5 - X11
#   6 - reboot (Do NOT set initdefault to this)
#
id:$DESKTOP:initdefault:" > $DIR_DESKTOP/inittab
cd /etc/
init 6
else
	cent6_menu
fi
exit
;;
3)
read -p "Do you want to Install All Program & PHP Version 5.5? [y/n]: " -e -i n cent6_all_php55
if [[ "$cent6_all_php55" = 'y' ]]; then
yum update -y
yum install epel* -y
yum install net-tools ntp wget git htop telnet tcpdump traceroute -y
service ntpd start
chkconfig ntpd on
#Apache
yum install epel* -y
yum install httpd -y
service httpd start
chkconfig httpd on
#PHP
wget http://dl.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm
wget http://rpms.famillecollet.com/enterprise/remi-release-6.rpm
rpm -Uvh epel-release-6-8.noarch.rpm
rpm -Uvh remi-release-6*.rpm
yum install yum-utils -y
yum-config-manager --enable remi-php55
yum install php php-mcrypt php-cli php-gd php-curl php-mysql php-ldap php-zip php-fileinfo -y
php -v
#MySQL
yum install epel* -y
yum install mysql-server mysql -y
service mysqld start
chkconfig mysqld on
/usr/bin/mysql_secure_installation
service mysqld restart
#phpMyAdmin
yum install epel* -y
yum install phpmyadmin -y
PHPMYADMIN="All"
DIR_PHPMYADMIN=/etc/httpd/conf.d/
echo "# phpMyAdmin - Web based MySQL browser written in php
#
# Allows only localhost by default
#
# But allowing phpMyAdmin to anyone other than localhost should be considered
# dangerous unless properly secured by SSL

Alias /phpMyAdmin /usr/share/phpMyAdmin
Alias /phpmyadmin /usr/share/phpMyAdmin

<Directory /usr/share/phpMyAdmin/>
   AddDefaultCharset UTF-8

   <IfModule mod_authz_core.c>
     # Apache 2.4
     <RequireAny>
       Require ip 127.0.0.1
       Require ip ::1
     </RequireAny>
   </IfModule>
   <IfModule !mod_authz_core.c>
     # Apache 2.2
     Order Deny,Allow
     Allow from $PHPMYADMIN
     Allow from ::1
   </IfModule>
</Directory>

<Directory /usr/share/phpMyAdmin/setup/>
   <IfModule mod_authz_core.c>
     # Apache 2.4
     <RequireAny>
       Require ip 127.0.0.1
       Require ip ::1
     </RequireAny>
   </IfModule>
   <IfModule !mod_authz_core.c>
     # Apache 2.2
     Order Deny,Allow
     Deny from All
     Allow from 127.0.0.1
     Allow from ::1
   </IfModule>
</Directory>

# These directories do not require access over HTTP - taken from the original
# phpMyAdmin upstream tarball
#
<Directory /usr/share/phpMyAdmin/libraries/>
    Order Deny,Allow
    Deny from All
    Allow from None
</Directory>

<Directory /usr/share/phpMyAdmin/setup/lib/>
    Order Deny,Allow
    Deny from All
    Allow from None
</Directory>

<Directory /usr/share/phpMyAdmin/setup/frames/>
    Order Deny,Allow
    Deny from All
    Allow from None
</Directory>

# This configuration prevents mod_security at phpMyAdmin directories from
# filtering SQL etc.  This may break your mod_security implementation.
#
#<IfModule mod_security.c>
#    <Directory /usr/share/phpMyAdmin/>
#        SecRuleInheritance Off
#    </Directory>
#</IfModule>" > $DIR_PHPMYADMIN/phpMyAdmin.conf
service httpd restart
#Remote
rpm -Uvh http://download.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm
yum install xrdp tigervnc-server -y
service xrdp start
chkconfig xrdp on
chkconfig vncserver on
#Desktop
yum install epel* -y
yum groupinstall "Desktop" "X Window System" -y
DESKTOP="5"
DIR_DESKTOP=/etc/
echo "# inittab is only used by upstart for the default runlevel.
#
# ADDING OTHER CONFIGURATION HERE WILL HAVE NO EFFECT ON YOUR SYSTEM.
#
# System initialization is started by /etc/init/rcS.conf
#
# Individual runlevels are started by /etc/init/rc.conf
#
# Ctrl-Alt-Delete is handled by /etc/init/control-alt-delete.conf
#
# Terminal gettys are handled by /etc/init/tty.conf and /etc/init/serial.conf,
# with configuration in /etc/sysconfig/init.
#
# For information on how to write upstart event handlers, or how
# upstart works, see init(5), init(8), and initctl(8).
#
# Default runlevel. The runlevels used are:
#   0 - halt (Do NOT set initdefault to this)
#   1 - Single user mode
#   2 - Multiuser, without NFS (The same as 3, if you do not have networking)
#   3 - Full multiuser mode
#   4 - unused
#   5 - X11
#   6 - reboot (Do NOT set initdefault to this)
#
id:$DESKTOP:initdefault:" > $DIR_DESKTOP/inittab
cd /etc/
init 6
else
	cent6_menu
fi
exit
;;
4)
read -p "Do you want to Install All Program & PHP Version 5.6? [y/n]: " -e -i n cent6_all_php56
if [[ "$cent6_all_php56" = 'y' ]]; then
yum update -y
