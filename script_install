##CentOS7_PHP##
##################
cent7_php_menu()
{
while :
do
        clear && echo ""
echo "                  ..                                                      "
echo "                .PLTJ.                                                    "
echo "               <><><><>                                                   "
echo "      KKSSV' 4KKK LJ KKKL.'VSSKK           CCCC  EEEEEE  NN   NN  TTTTTT  "
echo "      KKV' 4KKKKK LJ KKKKAL 'VKK         CC      EE      NNN  NN    TT    "
echo "      V' ' 'VKKKK LJ KKKKV' ' 'V        CC       EEEEE   NNNN NN    TT    "
echo "      .4MA.' 'VKK LJ KKV' '.4Mb.         CC      EE      NN NNNN    TT    "
echo "    . KKKKKA.' 'V LJ V' '.4KKKKK .         CCCC  EEEEEE  NN   NN    TT    "
echo "  .4D KKKKKKKA.'' LJ ''.4KKKKKKK FA.                                      "
echo " <QDD ++++++++++++  ++++++++++++ GFD>                                     "
echo "  'VD KKKKKKKK'.. LJ ..'KKKKKKKK FV                                       "
echo "    ' VKKKKK'. .4 LJ K. .'KKKKKV '                                        "
echo "       'VK'. .4KK LJ KKA. .'KV'                                           "
echo "      A. . .4KKKK LJ KKKKA. . .4                                          "
echo "      KKA. 'KKKKK LJ KKKKK' .4KK                                          "
echo "      KKSSA. VKKK LJ KKKV .4SSKK                                          "
echo "               <><><><>                                                   "
echo "                'MKKM'                                                    "
echo "                  ''                                                      "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Install PHP Version 5.4 "
echo " 2) Install PHP Version 5.5 "
echo " 3) Install PHP Version 5.6 "
echo " 4) Install PHP Version 7.1 "
echo " 5) Install PHP Version 7.2 "
echo " 6) Back "
read -p "Select an option [1-6]: " option
echo ""
case $option in
1)
read -p "Do you want to install PHP Version 5.4? [y/n]: " -e -i n cent7_php54
if [[ "$cent7_php54" = 'y' ]]; then
	yum install https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm -y
	yum install http://rpms.remirepo.net/enterprise/remi-release-7.rpm -y
	yum install yum-utils -y
	yum install php php-mcrypt php-cli php-gd php-curl php-mysql php-ldap php-zip php-fileinfo -y
	php -v
else
	cent7_php_menu
fi
exit
;;
2)
read -p "Do you want to install PHP Version 5.5? [y/n]: " -e -i n cent7_php55
if [[ "$cent7_php55" = 'y' ]]; then
	yum install https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm -y
	yum install http://rpms.remirepo.net/enterprise/remi-release-7.rpm -y
	yum install yum-utils -y
	yum-config-manager --enable remi-php55
	yum install php php-mcrypt php-cli php-gd php-curl php-mysql php-ldap php-zip php-fileinfo -y
	php -v
else
	cent7_php_menu
fi
exit
;;
3)
read -p "Do you want to install PHP Version 5.6? [y/n]: " -e -i n cent7_php56
if [[ "$cent7_php56" = 'y' ]]; then
	yum install https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm -y
	yum install http://rpms.remirepo.net/enterprise/remi-release-7.rpm -y
	yum install yum-utils -y
	yum-config-manager --enable remi-php56
	yum install php php-mcrypt php-cli php-gd php-curl php-mysql php-ldap php-zip php-fileinfo -y
	php -v
else
	cent7_php_menu
fi
exit
;;
4)
read -p "Do you want to install PHP Version 7.1? [y/n]: " -e -i n cent7_php71
if [[ "$cent7_php71" = 'y' ]]; then
	yum install https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm -y
	yum install http://rpms.remirepo.net/enterprise/remi-release-7.rpm -y
	yum install yum-utils -y
	yum-config-manager --enable remi-php71
	yum install php php-mcrypt php-cli php-gd php-curl php-mysql php-ldap php-zip php-fileinfo -y
	php -v
else
	cent7_php_menu
fi
exit
;;
5)
read -p "Do you want to install PHP Version 7.2? [y/n]: " -e -i n cent7_php72
if [[ "$cent7_php72" = 'y' ]]; then
	yum install https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm -y
	yum install http://rpms.remirepo.net/enterprise/remi-release-7.rpm -y
	yum install yum-utils -y
	yum-config-manager --enable remi-php72
	yum install php php-mcrypt php-cli php-gd php-curl php-mysql php-ldap php-zip php-fileinfo -y
	php -v
else
	cent7_php_menu
fi
exit
;;
6)
	cent7_menu
exit
;;

esac
done
}
