		if [ "$debian9" = "Update" ]; then
	debian9_update_menu
		elif [ "$debian9" = "Apache" ]; then
	debian9_apache_menu
		elif [ "$debian9" = "PHP" ]; then
	debian9_php_menu
		elif [ "$debian9" = "MySQL" ]; then
	debian9_mysql_menu
		elif [ "$debian9" = "All Program" ]; then
	debian9_all_menu
		elif [ "$debian9" = "Back" ]; then
	debian_nmenu
		fi
done
}
################

##Debian9_Update##
##################
debian9_update_menu()
{
while :
do
        clear && echo ""
echo "          _sudZUZ#Z#XZo=_         DDDD   EEEEEE BBBB   IIIIII  AAAA   NN   NN "
echo "       _jmZZ2!!~---~!!X##wa       DD DD  EE     BB BB    II   AA  AA  NNN  NN "
echo "    .<wdP~~            -!YZL,     DD  DD EEEEE  BBBBB    II   AAAAAA  NNNN NN "
