echo "     )YXL,,                                                                   "
echo "      +3#bc,                                                                  "
echo "       -)SSL,,                                                                "
echo "           ~~~~~                                                              "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Update & Install Standard "
echo " 2) Back "
read -p "Select an option [1-2]: " option
echo ""
case $option in
1)
read -p "Do you want to Update & Install Standard? [y/n]: " -e -i n debian9_update
if [[ "$debian9_update" = 'y' ]]; then
	apt-get install sudo -y
	sudo apt-get update && apt-get upgrade -y
	sudo apt-get install net-tools wget tcpdump ntp git htop telnet traceroute -y
else
	debian9_menu
fi
exit
;;
2)
	debian9_menu
exit
;;

esac
done
}
