##################

##Ubuntu##
##################
ubuntu_menu()
{
        clear && echo ""
echo "               .-.                                                           "
echo "         .-'''(|||)                                                          "
echo "      ,'\ \    '-'.                 88                         88            "
echo "     /   \ '''-.   '                88                         88            "
echo "   .-.  ,       '___:      88   88  88,888,  88   88  ,88888, 88888  88   88 "
echo "  (:::) :        ___       88   88  88   88  88   88  88   88  88    88   88 "
echo "   '-'  '       ,   :      88   88  88   88  88   88  88   88  88    88   88 "
echo "     \   / ,..-'   ,       88   88  88   88  88   88  88   88  88    88   88 "
echo "      './ /    .-.'        '88888'  '88888'  '88888'  88   88  '8888 '88888' "
echo "         '-..-(   )                                                          "
echo "               '-'                                                           "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

	PS3="Select Number [1-4]:"
	ubuntu_menu=("Ubuntu 14" "Ubuntu 16" "Ubuntu 18" "Back")
	select ubuntu in "${ubuntu_menu[@]}"; do
		if [ "$ubuntu" = "Ubuntu 14" ]; then
	ubuntu14_menu
		elif [ "$ubuntu" = "Ubuntu 16" ]; then
	ubuntu16_menu
		elif [ "$ubuntu" = "Ubuntu 18" ]; then
	ubuntu18_menu
		elif [ "$ubuntu" = "Back" ]; then
	main_menu
		fi
done
}
################

##Ubuntu14##
################
ubuntu14_menu()
{
        clear && echo ""
echo "               .-.                                                           "
echo "         .-'''(|||)                                                          "
echo "      ,'\ \    '-'.                 88                         88            "
echo "     /   \ '''-.   '                88                         88            "
echo "   .-.  ,       '___:      88   88  88,888,  88   88  ,88888, 88888  88   88 "
echo "  (:::) :        ___       88   88  88   88  88   88  88   88  88    88   88 "
echo "   '-'  '       ,   :      88   88  88   88  88   88  88   88  88    88   88 "
echo "     \   / ,..-'   ,       88   88  88   88  88   88  88   88  88    88   88 "
echo "      './ /    .-.'        '88888'  '88888'  '88888'  88   88  '8888 '88888' "
echo "         '-..-(   )                                                          "
echo "               '-'                                                           "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

	PS3="Select Number [1-8]:"
	ubuntu14_menu=( "Update" "Apache" "PHP" "MySQL" "All Program" "Back")
	select ubuntu14 in "${ubuntu14_menu[@]}"; do
		if [ "$ubuntu14" = "Update" ]; then
	ubuntu14_update_menu
		elif [ "$ubuntu14" = "Apache" ]; then
	ubuntu14_apache_menu
		elif [ "$ubuntu14" = "PHP" ]; then
	ubuntu14_php_menu
		elif [ "$ubuntu14" = "MySQL" ]; then
	ubuntu14_mysql_menu
		#elif [ "$ubuntu14" = "Desktop" ]; then
	#ubuntu14_desktop_menu
		#elif [ "$ubuntu14" = "Remote Desktop" ]; then
	#ubuntu14_remote_menu
		elif [ "$ubuntu14" = "All Program" ]; then
	ubuntu14_all_menu
		elif [ "$ubuntu14" = "Back" ]; then
	ubuntu_menu
		fi
done
}
################

##Ubuntu14_Update##
##################
ubuntu14_update_menu()
{
while :
do
        clear && echo ""
echo "               .-.                                                           "
echo "         .-'''(|||)                                                          "
echo "      ,'\ \    '-'.                 88                         88            "
echo "     /   \ '''-.   '                88                         88            "
echo "   .-.  ,       '___:      88   88  88,888,  88   88  ,88888, 88888  88   88 "
echo "  (:::) :        ___       88   88  88   88  88   88  88   88  88    88   88 "
echo "   '-'  '       ,   :      88   88  88   88  88   88  88   88  88    88   88 "
echo "     \   / ,..-'   ,       88   88  88   88  88   88  88   88  88    88   88 "
echo "      './ /    .-.'        '88888'  '88888'  '88888'  88   88  '8888 '88888' "
echo "         '-..-(   )                                                          "
echo "               '-'                                                           "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Update & Install Standard "
echo " 2) Back "
read -p "Select an option [1-2]: " option
echo ""
case $option in
1)
read -p "Do you want to Update & Install Standard? [y/n]: " -e -i n ubuntu14_update
if [[ "$ubuntu14_update" = 'y' ]]; then
	sudo apt-get update && apt-get upgrade -y
	sudo apt-get install wget tcpdump ntp git htop telnet traceroute -y
else
	ubuntu14_menu
fi
exit
;;
2)
	ubuntu14_menu
exit
;;

esac
done
}
