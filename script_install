debian8_all_menu()
{
while :
do
        clear && echo ""
echo "          _sudZUZ#Z#XZo=_         DDDD   EEEEEE BBBB   IIIIII  AAAA   NN   NN "
echo "       _jmZZ2!!~---~!!X##wa       DD DD  EE     BB BB    II   AA  AA  NNN  NN "
echo "    .<wdP~~            -!YZL,     DD  DD EEEEE  BBBBB    II   AAAAAA  NNNN NN "
echo "   .mX2'       _%aaa__     XZ[.   DD DD  EE     BB  BB   II   AA  AA  NN NNNN "
echo "   oZ[      _jdXY!~?S#wa   ]Xb;   DDDD   EEEEEE BBBBB  IIIIII AA  AA  NN   NN "
echo "  _#e'     .]X2(     ~Xw|  )XXc                                               "
echo " .2Z'      ]X[.       xY|  ]oZ(                                               "
echo " .2#;      )3k;     _s!~   jXf'                                               "
echo "  1Z>      -]Xb/    ~    __#2(                                                "
echo "  -Zo;       +!4ZwaaaauZZXY'                                                  "
echo "   *#[,        ~-?!!!!!!-~                                                    "
echo "    XUb;.                                                                     "
echo "     )YXL,,                                                                   "
echo "      +3#bc,                                                                  "
echo "       -)SSL,,                                                                "
echo "           ~~~~~                                                              "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Install All Program & PHP Version 5.6 "
echo " 2) Install All Program & PHP Version 7.1 "
echo " 3) Install All Program & PHP Version 7.2 "
echo " 4) Back "
read -p "Select an option [1-4]: " option
echo ""
case $option in
1)
read -p "Do you want to Install All Program & PHP Version 5.6? [y/n]: " -e -i n debian8_all_php56
if [[ "$debian8_all_php56" = 'y' ]]; then
	apt-get update && apt-get upgrade -y
	#Apache
	apt-get install apache2 -y
	systemctl restart apache2
	systemctl enable apache2
	#PHP
	apt-get install apt-transport-https lsb-release ca-certificates -y
	wget -O /etc/apt/trusted.gpg.d/php.gpg https://packages.sury.org/php/apt.gpg
	echo "deb https://packages.sury.org/php/ $(lsb_release -sc) main" | tee /etc/apt/sources.list.d/php.list
	apt-get update -y
	apt-get install php5.6 -y
	apt-get install php5.6-cli php5.6-common php5.6-curlphp5.6-mbstring php5.6-mysql php5.6-xml -y
	php -v
	#MySQL
	apt-get install mysql-server -y
	systemctl restart mysql
	systemctl enable mysql
else
	debian8_all_menu
fi
exit
;;
2)
read -p "Do you want to Install All Program & PHP Version 7.1? [y/n]: " -e -i n debian8_all_php71
if [[ "$debian8_all_php71" = 'y' ]]; then
	apt-get update && apt-get upgrade -y
	#Apache
	apt-get install apache2 -y
	systemctl restart apache2
	systemctl enable apache2
	#PHP
	apt-get install apt-transport-https lsb-release ca-certificates -y
	wget -O /etc/apt/trusted.gpg.d/php.gpg https://packages.sury.org/php/apt.gpg
	echo "deb https://packages.sury.org/php/ $(lsb_release -sc) main" | tee /etc/apt/sources.list.d/php.list
	apt-get update -y
	apt-get install php7.1 -y
	apt-get install php7.1-cli php7.1-common php7.1-curlphp7.1-mbstring php7.1-mysql php7.1-xml -y
	php -v
	#MySQL
	apt-get install mysql-server -y
	systemctl restart mysql
	systemctl enable mysql
else
	debian8_all_menu
fi
exit
;;
3)
read -p "DDo you want to Install All Program & PHP Version 7.2? [y/n]: " -e -i n debian8_all_php72
if [[ "$debian8_all_php72" = 'y' ]]; then
	apt-get update && apt-get upgrade -y
	#Apache
	apt-get install apache2 -y
	systemctl restart apache2
	systemctl enable apache2
	#PHP
	apt-get install apt-transport-https lsb-release ca-certificates -y
	wget -O /etc/apt/trusted.gpg.d/php.gpg https://packages.sury.org/php/apt.gpg
	echo "deb https://packages.sury.org/php/ $(lsb_release -sc) main" | tee /etc/apt/sources.list.d/php.list
	apt-get update -y
	apt-get install php7.2 -y
	apt-get install php7.2-cli php7.2-common php7.2-curl php7.2-mbstring php7.2-mysql php7.2-xml -y
	php -v
	#MySQL
	apt-get install mysql-server -y
	systemctl restart mysql
	systemctl enable mysql
else
	debian8_all_menu
fi
exit
;;
4)
	debian8_menu
exit
;;

esac
done
}
