##################

##Ubuntu16##
################
ubuntu16_menu()
{
        clear && echo ""
echo "               .-.                                                           "
echo "         .-'''(|||)                                                          "
echo "      ,'\ \    '-'.                 88                         88            "
echo "     /   \ '''-.   '                88                         88            "
echo "   .-.  ,       '___:      88   88  88,888,  88   88  ,88888, 88888  88   88 "
echo "  (:::) :        ___       88   88  88   88  88   88  88   88  88    88   88 "
echo "   '-'  '       ,   :      88   88  88   88  88   88  88   88  88    88   88 "
echo "     \   / ,..-'   ,       88   88  88   88  88   88  88   88  88    88   88 "
echo "      './ /    .-.'        '88888'  '88888'  '88888'  88   88  '8888 '88888' "
echo "         '-..-(   )                                                          "
echo "               '-'                                                           "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

	PS3="Select Number [1-6]:"
	ubuntu16_menu=( "Update" "Apache" "PHP" "MySQL" "All Program" "Back")
	select ubuntu16 in "${ubuntu16_menu[@]}"; do
		if [ "$ubuntu16" = "Update" ]; then
	ubuntu16_update_menu
		elif [ "$ubuntu16" = "Apache" ]; then
	ubuntu16_apache_menu
		elif [ "$ubuntu16" = "PHP" ]; then
	ubuntu16_php_menu
		elif [ "$ubuntu16" = "MySQL" ]; then
	ubuntu16_mysql_menu
		#elif [ "$ubuntu16" = "Desktop" ]; then
	#ubuntu16_desktop_menu
		#elif [ "$ubuntu16" = "Remote Desktop" ]; then
	#ubuntu16_remote_menu
		elif [ "$ubuntu16" = "All Program" ]; then
	ubuntu16_all_menu
		elif [ "$ubuntu16" = "Back" ]; then
	ubuntu_menu
		fi
done
}
