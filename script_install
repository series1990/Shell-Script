debian7_all_menu()
{
while :
do
        clear && echo ""
echo "          _sudZUZ#Z#XZo=_         DDDD   EEEEEE BBBB   IIIIII  AAAA   NN   NN "
echo "       _jmZZ2!!~---~!!X##wa       DD DD  EE     BB BB    II   AA  AA  NNN  NN "
echo "    .<wdP~~            -!YZL,     DD  DD EEEEE  BBBBB    II   AAAAAA  NNNN NN "
echo "   .mX2'       _%aaa__     XZ[.   DD DD  EE     BB  BB   II   AA  AA  NN NNNN "
echo "   oZ[      _jdXY!~?S#wa   ]Xb;   DDDD   EEEEEE BBBBB  IIIIII AA  AA  NN   NN "
echo "  _#e'     .]X2(     ~Xw|  )XXc                                               "
echo " .2Z'      ]X[.       xY|  ]oZ(                                               "
echo " .2#;      )3k;     _s!~   jXf'                                               "
echo "  1Z>      -]Xb/    ~    __#2(                                                "
echo "  -Zo;       +!4ZwaaaauZZXY'                                                  "
echo "   *#[,        ~-?!!!!!!-~                                                    "
echo "    XUb;.                                                                     "
echo "     )YXL,,                                                                   "
echo "      +3#bc,                                                                  "
echo "       -)SSL,,                                                                "
echo "           ~~~~~                                                              "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Install All Program & PHP Version 5.4 "
echo " 2) Back "
read -p "Select an option [1-2]: " option
echo ""
case $option in
1)
read -p "Do you want to Install All Program & PHP Version 5.4? [y/n]: " -e -i n debian7_all_php54
if [[ "$debian7_all_php54" = 'y' ]]; then
	apt-get update && apt-get upgrade -y
	apt-get install wget tcpdump ntp git htop telnet traceroute -y
	#Apache
	 apt-get install apache2 -y
	 service apache2 start
	#PHP
	apt-get install php5 php-pear php5-mysql -y
	php -v
	#MySQL
	apt-get install mysql-server -y
	service mysql start
	service apache2 restart
else
	debian7_menu
fi
exit
;;
2)
	debian7_menu
exit
;;

esac
done
}
