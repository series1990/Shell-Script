	cent6_menu
fi
exit
;;
5)
	cent6_menu
exit
;;

esac
done
}
##################

##CentOS7##
##################
cent7_menu()
{
        clear && echo ""
echo "                  ..                                                      "
echo "                .PLTJ.                                                    "
echo "               <><><><>                                                   "
echo "      KKSSV' 4KKK LJ KKKL.'VSSKK           CCCC  EEEEEE  NN   NN  TTTTTT  "
echo "      KKV' 4KKKKK LJ KKKKAL 'VKK         CC      EE      NNN  NN    TT    "
echo "      V' ' 'VKKKK LJ KKKKV' ' 'V        CC       EEEEE   NNNN NN    TT    "
echo "      .4MA.' 'VKK LJ KKV' '.4Mb.         CC      EE      NN NNNN    TT    "
echo "    . KKKKKA.' 'V LJ V' '.4KKKKK .         CCCC  EEEEEE  NN   NN    TT    "
echo "  .4D KKKKKKKA.'' LJ ''.4KKKKKKK FA.                                      "
echo " <QDD ++++++++++++  ++++++++++++ GFD>                                     "
echo "  'VD KKKKKKKK'.. LJ ..'KKKKKKKK FV                                       "
echo "    ' VKKKKK'. .4 LJ K. .'KKKKKV '                                        "
echo "       'VK'. .4KK LJ KKA. .'KV'                                           "
echo "      A. . .4KKKK LJ KKKKA. . .4                                          "
echo "      KKA. 'KKKKK LJ KKKKK' .4KK                                          "
echo "      KKSSA. VKKK LJ KKKV .4SSKK                                          "
echo "               <><><><>                                                   "
echo "                'MKKM'                                                    "
echo "                  ''                                                      "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

	PS3="Select Number [1-9]:"
	cent7_menu=("Update&Standard" "Apache" "PHP" "MySQL" "phpMyAdmin" "Desktop" "Remote Desktop" "All Program" "Back")
	select cent7 in "${cent7_menu[@]}"; do
		if [ "$cent7" = "Update&Standard" ]; then
	cent7_update_menu
		elif [ "$cent7" = "Apache" ]; then
	cent7_apache_menu
		elif [ "$cent7" = "PHP" ]; then
	cent7_php_menu
		elif [ "$cent7" = "MySQL" ]; then
	cent7_mysql_menu
		elif [ "$cent7" = "phpMyAdmin" ]; then
	cent7_phpmyadmin_menu
		elif [ "$cent7" = "Desktop" ]; then
	cent7_desktop_menu
		elif [ "$cent7" = "Remote Desktop" ]; then
	cent7_remote_menu
		elif [ "$cent7" = "All Program" ]; then
	cent7_all_menu
		elif [ "$cent7" = "Back" ]; then
	cent_menu
		fi
done
}
