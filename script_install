	ubuntu18_menu
exit
;;

esac
done
}
##################

##Ubuntu18_PHP##
##################
ubuntu18_php_menu()
{
while :
do
        clear && echo ""
echo "               .-.                                                           "
echo "         .-'''(|||)                                                          "
echo "      ,'\ \    '-'.                 88                         88            "
echo "     /   \ '''-.   '                88                         88            "
echo "   .-.  ,       '___:      88   88  88,888,  88   88  ,88888, 88888  88   88 "
echo "  (:::) :        ___       88   88  88   88  88   88  88   88  88    88   88 "
echo "   '-'  '       ,   :      88   88  88   88  88   88  88   88  88    88   88 "
echo "     \   / ,..-'   ,       88   88  88   88  88   88  88   88  88    88   88 "
echo "      './ /    .-.'        '88888'  '88888'  '88888'  88   88  '8888 '88888' "
echo "         '-..-(   )                                                          "
echo "               '-'                                                           "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Install PHP Version 5.6"
echo " 2) Install PHP Version 7.1"
echo " 3) Install PHP Version 7.2 "
echo " 4) Back "
read -p "Select an option [1-4]: " option
echo ""
case $option in
1)
read -p "Do you want to Install PHP Version 5.6? [y/n]: " -e -i n ubuntu18_php56
if [[ "ubuntu18_php56" = 'y' ]]; then
	apt-get update && apt-get upgrade -y
	apt-get install python-software-properties -y
	add-apt-repository ppa:ondrej/php
	apt-get update -y
	apt-get install php5.6 -y
	php -v
else
	ubuntu16_menu
fi
exit
;;
2)
read -p "Do you want to Install PHP Version 7.1? [y/n]: " -e -i n ubuntu18_php71
if [[ "ubuntu18_php71" = 'y' ]]; then
	apt-get update && apt-get upgrade -y
	apt-get install python-software-properties -y
	add-apt-repository ppa:ondrej/php
	apt-get update -y
	apt-get install php7.1 -y
	php -v
else
	ubuntu16_menu
fi
exit
;;
3)
read -p "Do you want to Install PHP Version 7.2? [y/n]: " -e -i n ubuntu18_php72
if [[ "ubuntu18_php72" = 'y' ]]; then
	apt-get update && apt-get upgrade -y
	apt-get install python-software-properties -y
	add-apt-repository ppa:ondrej/php
	apt-get update -y
	apt-get install -y php7.2
	php -v
else
	ubuntu16_menu
fi
exit
;;
4)
	ubuntu16_menu
exit
;;

esac
done
}
