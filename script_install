##Ubuntu16_Update##
##################
ubuntu16_update_menu()
{
while :
do
        clear && echo ""
echo "               .-.                                                           "
echo "         .-'''(|||)                                                          "
echo "      ,'\ \    '-'.                 88                         88            "
echo "     /   \ '''-.   '                88                         88            "
echo "   .-.  ,       '___:      88   88  88,888,  88   88  ,88888, 88888  88   88 "
echo "  (:::) :        ___       88   88  88   88  88   88  88   88  88    88   88 "
echo "   '-'  '       ,   :      88   88  88   88  88   88  88   88  88    88   88 "
echo "     \   / ,..-'   ,       88   88  88   88  88   88  88   88  88    88   88 "
echo "      './ /    .-.'        '88888'  '88888'  '88888'  88   88  '8888 '88888' "
echo "         '-..-(   )                                                          "
echo "               '-'                                                           "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Update & Install Standard "
echo " 2) Back "
read -p "Select an option [1-2]: " option
echo ""
case $option in
1)
read -p "Do you want to Update & Install Standard? [y/n]: " -e -i n ubuntu16_update
if [[ "$ubuntu16_update" = 'y' ]]; then
	sudo apt-get update && apt-get upgrade -y
	sudo apt-get install wget tcpdump ntp git htop telnet traceroute -y
else
	ubuntu16_menu
fi
exit
;;
2)
	ubuntu16_menu
exit
;;

esac
done
}
