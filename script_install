sudo systemctl enable mysql
#Remote
#sudo apt-get install xrdp -y
#echo xfce4-session >~/.xsession
#sudo service xrdp restart
#Desktop
#sudo apt-get install xfce4 xdm -y
#sudo apt-get update && sudo apt-get install firefox -y
#reboot
exit
else
	ubuntu16_all_menu
fi
;;
4)
	ubuntu16_menu
exit
;;

esac
done
}
##################

##Ubuntu18##
################
ubuntu18_menu()
{
        clear && echo ""
echo "               .-.                                                           "
echo "         .-'''(|||)                                                          "
echo "      ,'\ \    '-'.                 88                         88            "
echo "     /   \ '''-.   '                88                         88            "
echo "   .-.  ,       '___:      88   88  88,888,  88   88  ,88888, 88888  88   88 "
echo "  (:::) :        ___       88   88  88   88  88   88  88   88  88    88   88 "
echo "   '-'  '       ,   :      88   88  88   88  88   88  88   88  88    88   88 "
echo "     \   / ,..-'   ,       88   88  88   88  88   88  88   88  88    88   88 "
echo "      './ /    .-.'        '88888'  '88888'  '88888'  88   88  '8888 '88888' "
echo "         '-..-(   )                                                          "
echo "               '-'                                                           "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

	PS3="Select Number [1-6]:"
	ubuntu18_menu=( "Update" "Apache" "PHP" "MySQL" "All Program" "Back")
	select ubuntu18 in "${ubuntu18_menu[@]}"; do
		if [ "$ubuntu18" = "Update" ]; then
	ubuntu18_update_menu
		elif [ "$ubuntu18" = "Apache" ]; then
	ubuntu18_apache_menu
		elif [ "$ubuntu18" = "PHP" ]; then
	ubuntu18_php_menu
		elif [ "$ubuntu18" = "MySQL" ]; then
	ubuntu18_mysql_menu
		#elif [ "$ubuntu18" = "Desktop" ]; then
	#ubuntu18_desktop_menu
		#elif [ "$ubuntu18" = "Remote Desktop" ]; then
	#ubuntu18_remote_menu
		elif [ "$ubuntu18" = "All Program" ]; then
	ubuntu18_all_menu
		elif [ "$ubuntu18" = "Back" ]; then
	ubuntu_menu
		fi
done
}
################

##Ubuntu18_Update##
##################
ubuntu18_update_menu()
{
while :
do
        clear && echo ""
echo "               .-.                                                           "
echo "         .-'''(|||)                                                          "
echo "      ,'\ \    '-'.                 88                         88            "
echo "     /   \ '''-.   '                88                         88            "
echo "   .-.  ,       '___:      88   88  88,888,  88   88  ,88888, 88888  88   88 "
echo "  (:::) :        ___       88   88  88   88  88   88  88   88  88    88   88 "
echo "   '-'  '       ,   :      88   88  88   88  88   88  88   88  88    88   88 "
echo "     \   / ,..-'   ,       88   88  88   88  88   88  88   88  88    88   88 "
echo "      './ /    .-.'        '88888'  '88888'  '88888'  88   88  '8888 '88888' "
echo "         '-..-(   )                                                          "
echo "               '-'                                                           "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Update & Install Standard "
echo " 2) Back "
read -p "Select an option [1-2]: " option
echo ""
case $option in
1)
read -p "Do you want to Update & Install Standard? [y/n]: " -e -i n ubuntu18_update
if [[ "$ubuntu18_update" = 'y' ]]; then
	apt-get update && apt-get upgrade -y
	apt-get install wget tcpdump ntp git htop telnet traceroute -y
else
	ubuntu18_menu
fi
exit
;;
2)
	ubuntu18_menu
exit
;;

esac
done
}
