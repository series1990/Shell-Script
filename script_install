##Ubuntu14_Apache##
##################
ubuntu14_apache_menu()
{
while :
do
        clear && echo ""
echo "               .-.                                                           "
echo "         .-'''(|||)                                                          "
echo "      ,'\ \    '-'.                 88                         88            "
echo "     /   \ '''-.   '                88                         88            "
echo "   .-.  ,       '___:      88   88  88,888,  88   88  ,88888, 88888  88   88 "
echo "  (:::) :        ___       88   88  88   88  88   88  88   88  88    88   88 "
echo "   '-'  '       ,   :      88   88  88   88  88   88  88   88  88    88   88 "
echo "     \   / ,..-'   ,       88   88  88   88  88   88  88   88  88    88   88 "
echo "      './ /    .-.'        '88888'  '88888'  '88888'  88   88  '8888 '88888' "
echo "         '-..-(   )                                                          "
echo "               '-'                                                           "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Install Apache "
echo " 2) Back "
read -p "Select an option [1-2]: " option
echo ""
case $option in
1)
read -p "Do you want to Install Apache? [y/n]: " -e -i n ubuntu14_apache
if [[ "$ubuntu14_apache" = 'y' ]]; then
	sudo apt-get update && apt-get upgrade -y
