#!/bin/bash

##MAINMENU##
##################
main_menu()
{
        clear && echo ""
echo " _________  _________  _________  ___            ___  ________    _________  _________  _________  "
echo "|  _____  ||___   ___|/  _____  \/   \          /   \|  _____ \  /  _____  \|___   ___|/  _____  \ "
echo "| |     |_|    | |    | /     \ || |\ \        / /| || |     \ \ | /     \ |    | |    | /     \ | "
echo "| |_______     | |    | |_____| || | \ \      / / | || |      | || |_____| |    | |    | |_____| | "
echo "|_______  |    | |    |  _____  || |  \ \    / /  | || |      | ||  _____  |    | |    |  _____  | "
echo " _      | |    | |    | |     | || |   \ \  / /   | || |      | || |     | |    | |    | |     | | "
echo "| |_____| | ___| |___ | |     | || |    \ \/ /    | || |_____/ / | |     | |    | |    | |     | | "
echo "|_________||_________||_|     |_||_|     \__/     |_||________/  |_|     |_|    |_|    |_|     |_| "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

	PS3="Select Number [1-4]:"
	main_menu=("CentOS" "Ubuntu" "Debian" "Exit")
	select os in "${main_menu[@]}"; do
		if [ "$os" = "Exit" ]; then
			echo "Thank you for using Program!" && sleep 3 && clear
		exit 0
		elif [ "$os" = "CentOS" ]; then
	cent_menu
		elif [ "$os" = "Ubuntu" ]; then
	ubuntu_menu
		elif [ "$os" = "Debian" ]; then
	debian_nmenu
		fi
done
}
################

##CentOS##
##################
cent_menu()
{
        clear && echo ""
echo "                  ..                                                      "
echo "                .PLTJ.                                                    "
echo "               <><><><>                                                   "
echo "      KKSSV' 4KKK LJ KKKL.'VSSKK           CCCC  EEEEEE  NN   NN  TTTTTT  "
echo "      KKV' 4KKKKK LJ KKKKAL 'VKK         CC      EE      NNN  NN    TT    "
echo "      V' ' 'VKKKK LJ KKKKV' ' 'V        CC       EEEEE   NNNN NN    TT    "
echo "      .4MA.' 'VKK LJ KKV' '.4Mb.         CC      EE      NN NNNN    TT    "
echo "    . KKKKKA.' 'V LJ V' '.4KKKKK .         CCCC  EEEEEE  NN   NN    TT    "
echo "  .4D KKKKKKKA.'' LJ ''.4KKKKKKK FA.                                      "
echo " <QDD ++++++++++++  ++++++++++++ GFD>                                     "
echo "  'VD KKKKKKKK'.. LJ ..'KKKKKKKK FV                                       "
echo "    ' VKKKKK'. .4 LJ K. .'KKKKKV '                                        "
echo "       'VK'. .4KK LJ KKA. .'KV'                                           "
echo "      A. . .4KKKK LJ KKKKA. . .4                                          "
echo "      KKA. 'KKKKK LJ KKKKK' .4KK                                          "
echo "      KKSSA. VKKK LJ KKKV .4SSKK                                          "
echo "               <><><><>                                                   "
echo "                'MKKM'                                                    "
echo "                  ''                                                      "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

	PS3="Select Number [1-3]:"
	cent_menu=("CentOS 6" "CentOS 7" "Back")
	select cent in "${cent_menu[@]}"; do
		if [ "$cent" = "CentOS 6" ]; then
	cent6_menu
		elif [ "$cent" = "CentOS 7" ]; then
	cent7_menu
		elif [ "$cent" = "Back" ]; then
	main_menu
		fi
done
}
################

##CentOS6##
##################
cent6_menu()
{
        clear && echo ""
echo "                  ..                                                      "
echo "                .PLTJ.                                                    "
echo "               <><><><>                                                   "
echo "      KKSSV' 4KKK LJ KKKL.'VSSKK           CCCC  EEEEEE  NN   NN  TTTTTT  "
echo "      KKV' 4KKKKK LJ KKKKAL 'VKK         CC      EE      NNN  NN    TT    "
echo "      V' ' 'VKKKK LJ KKKKV' ' 'V        CC       EEEEE   NNNN NN    TT    "
echo "      .4MA.' 'VKK LJ KKV' '.4Mb.         CC      EE      NN NNNN    TT    "
echo "    . KKKKKA.' 'V LJ V' '.4KKKKK .         CCCC  EEEEEE  NN   NN    TT    "
echo "  .4D KKKKKKKA.'' LJ ''.4KKKKKKK FA.                                      "
echo " <QDD ++++++++++++  ++++++++++++ GFD>                                     "
echo "  'VD KKKKKKKK'.. LJ ..'KKKKKKKK FV                                       "
echo "    ' VKKKKK'. .4 LJ K. .'KKKKKV '                                        "
echo "       'VK'. .4KK LJ KKA. .'KV'                                           "
echo "      A. . .4KKKK LJ KKKKA. . .4                                          "
echo "      KKA. 'KKKKK LJ KKKKK' .4KK                                          "
echo "      KKSSA. VKKK LJ KKKV .4SSKK                                          "
echo "               <><><><>                                                   "
echo "                'MKKM'                                                    "
echo "                  ''                                                      "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

	PS3="Select Number [1-9]:"
	cent6_menu=("Update&Standard" "Apache" "PHP" "MySQL" "phpMyAdmin" "Desktop" "Remote Desktop" "All Program" "Back")
	select cent6 in "${cent6_menu[@]}"; do
		if [ "$cent6" = "Update&Standard" ]; then
	cent6_update_menu
		elif [ "$cent6" = "Apache" ]; then
	cent6_apache_menu
		elif [ "$cent6" = "PHP" ]; then
	cent6_php_menu
		elif [ "$cent6" = "MySQL" ]; then
	cent6_mysql_menu
		elif [ "$cent6" = "phpMyAdmin" ]; then
	cent6_phpmyadmin_menu
		elif [ "$cent6" = "Desktop" ]; then
	cent6_desktop_menu
		elif [ "$cent6" = "Remote Desktop" ]; then
	cent6_remote_menu
		elif [ "$cent6" = "All Program" ]; then
	cent6_all_menu
		elif [ "$cent6" = "Back" ]; then
	cent_menu
		fi
done
}
##################

##CentOS6_Update##
##################
cent6_update_menu()
{
while :
do
        clear && echo ""
echo "                  ..                                                      "
echo "                .PLTJ.                                                    "
echo "               <><><><>                                                   "
echo "      KKSSV' 4KKK LJ KKKL.'VSSKK           CCCC  EEEEEE  NN   NN  TTTTTT  "
echo "      KKV' 4KKKKK LJ KKKKAL 'VKK         CC      EE      NNN  NN    TT    "
echo "      V' ' 'VKKKK LJ KKKKV' ' 'V        CC       EEEEE   NNNN NN    TT    "
echo "      .4MA.' 'VKK LJ KKV' '.4Mb.         CC      EE      NN NNNN    TT    "
echo "    . KKKKKA.' 'V LJ V' '.4KKKKK .         CCCC  EEEEEE  NN   NN    TT    "
echo "  .4D KKKKKKKA.'' LJ ''.4KKKKKKK FA.                                      "
echo " <QDD ++++++++++++  ++++++++++++ GFD>                                     "
echo "  'VD KKKKKKKK'.. LJ ..'KKKKKKKK FV                                       "
echo "    ' VKKKKK'. .4 LJ K. .'KKKKKV '                                        "
echo "       'VK'. .4KK LJ KKA. .'KV'                                           "
echo "      A. . .4KKKK LJ KKKKA. . .4                                          "
echo "      KKA. 'KKKKK LJ KKKKK' .4KK                                          "
echo "      KKSSA. VKKK LJ KKKV .4SSKK                                          "
echo "               <><><><>                                                   "
echo "                'MKKM'                                                    "
echo "                  ''                                                      "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Update & Install Standard "
echo " 2) Back "
read -p "Select an option [1-2]: " option
echo ""
case $option in
1)
read -p "Do you want to Update & Install Standard? [y/n]: " -e -i n cent6_update
if [[ "$cent6_update" = 'y' ]]; then
	yum update -y
	yum install epel* -y
	yum install net-tools ntp wget git htop telnet tcpdump traceroute -y
	service ntpd start
	chkconfig ntpd on
else
	cent6_menu
fi
exit
;;
2)
	cent6_menu
exit
;;

esac
done
}
