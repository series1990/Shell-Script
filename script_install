##Debian##
################
debian_nmenu()
{
        clear && echo ""
echo "          _sudZUZ#Z#XZo=_         DDDD   EEEEEE BBBB   IIIIII  AAAA   NN   NN "
echo "       _jmZZ2!!~---~!!X##wa       DD DD  EE     BB BB    II   AA  AA  NNN  NN "
echo "    .<wdP~~            -!YZL,     DD  DD EEEEE  BBBBB    II   AAAAAA  NNNN NN "
echo "   .mX2'       _%aaa__     XZ[.   DD DD  EE     BB  BB   II   AA  AA  NN NNNN "
echo "   oZ[      _jdXY!~?S#wa   ]Xb;   DDDD   EEEEEE BBBBB  IIIIII AA  AA  NN   NN "
echo "  _#e'     .]X2(     ~Xw|  )XXc                                               "
echo " .2Z'      ]X[.       xY|  ]oZ(                                               "
echo " .2#;      )3k;     _s!~   jXf'                                               "
echo "  1Z>      -]Xb/    ~    __#2(                                                "
echo "  -Zo;       +!4ZwaaaauZZXY'                                                  "
echo "   *#[,        ~-?!!!!!!-~                                                    "
echo "    XUb;.                                                                     "
echo "     )YXL,,                                                                   "
echo "      +3#bc,                                                                  "
echo "       -)SSL,,                                                                "
echo "           ~~~~~                                                              "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

	PS3="Select Number [1-4]:"
	debian_nmenu=("Debian 7" "Debian 8" "Debian 9" "Back")
	select debian in "${debian_nmenu[@]}"; do
		if [ "$debian" = "Debian 7" ]; then
	debian7_menu
		elif [ "$debian" = "Debian 8" ]; then
	debian8_menu
		elif [ "$debian" = "Debian 9" ]; then
	debian9_menu
		elif [ "$debian" = "Back" ]; then
	main_menu
		fi
done
}
