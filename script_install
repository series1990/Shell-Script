##Debian8##
################
debian8_menu()
{
        clear && echo ""
echo "          _sudZUZ#Z#XZo=_         DDDD   EEEEEE BBBB   IIIIII  AAAA   NN   NN "
echo "       _jmZZ2!!~---~!!X##wa       DD DD  EE     BB BB    II   AA  AA  NNN  NN "
echo "    .<wdP~~            -!YZL,     DD  DD EEEEE  BBBBB    II   AAAAAA  NNNN NN "
echo "   .mX2'       _%aaa__     XZ[.   DD DD  EE     BB  BB   II   AA  AA  NN NNNN "
echo "   oZ[      _jdXY!~?S#wa   ]Xb;   DDDD   EEEEEE BBBBB  IIIIII AA  AA  NN   NN "
echo "  _#e'     .]X2(     ~Xw|  )XXc                                               "
echo " .2Z'      ]X[.       xY|  ]oZ(                                               "
echo " .2#;      )3k;     _s!~   jXf'                                               "
echo "  1Z>      -]Xb/    ~    __#2(                                                "
echo "  -Zo;       +!4ZwaaaauZZXY'                                                  "
echo "   *#[,        ~-?!!!!!!-~                                                    "
echo "    XUb;.                                                                     "
echo "     )YXL,,                                                                   "
echo "      +3#bc,                                                                  "
echo "       -)SSL,,                                                                "
echo "           ~~~~~                                                              "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

	PS3="Select Number [1-6]:"
	debian8_menu=("Update" "Apache" "PHP" "MySQL" "All Program" "Back")
	select debian8 in "${debian8_menu[@]}"; do
		if [ "$debian8" = "Update" ]; then
	debian8_update_menu
		elif [ "$debian8" = "Apache" ]; then
	debian8_apache_menu
		elif [ "$debian8" = "PHP" ]; then
	debian8_php_menu
		elif [ "$debian8" = "MySQL" ]; then
	debian8_mysql_menu
		elif [ "$debian8" = "All Program" ]; then
	debian8_all_menu
		elif [ "$debian8" = "Back" ]; then
	debian_nmenu
		fi
done
}
