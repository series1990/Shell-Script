echo ""

echo " 1) Install Apache "
echo " 2) Back "
read -p "Select an option [1-2]: " option
echo ""
case $option in
1)
read -p "Do you want to install Apache? [y/n]: " -e -i n cent6_apache
if [[ "$cent6_apache" = 'y' ]]; then
	yum install epel* -y
	yum install httpd -y
	service httpd start
	chkconfig httpd on
else
	cent6_menu
fi
exit
;;
2)
	cent6_menu
exit
;;

esac
done
}
##################

##CentOS6_PHP##
##################
cent6_php_menu()
{
while :
do
        clear && echo ""
echo "                  ..                                                      "
echo "                .PLTJ.                                                    "
echo "               <><><><>                                                   "
echo "      KKSSV' 4KKK LJ KKKL.'VSSKK           CCCC  EEEEEE  NN   NN  TTTTTT  "
echo "      KKV' 4KKKKK LJ KKKKAL 'VKK         CC      EE      NNN  NN    TT    "
echo "      V' ' 'VKKKK LJ KKKKV' ' 'V        CC       EEEEE   NNNN NN    TT    "
echo "      .4MA.' 'VKK LJ KKV' '.4Mb.         CC      EE      NN NNNN    TT    "
echo "    . KKKKKA.' 'V LJ V' '.4KKKKK .         CCCC  EEEEEE  NN   NN    TT    "
echo "  .4D KKKKKKKA.'' LJ ''.4KKKKKKK FA.                                      "
echo " <QDD ++++++++++++  ++++++++++++ GFD>                                     "
echo "  'VD KKKKKKKK'.. LJ ..'KKKKKKKK FV                                       "
echo "    ' VKKKKK'. .4 LJ K. .'KKKKKV '                                        "
echo "       'VK'. .4KK LJ KKA. .'KV'                                           "
echo "      A. . .4KKKK LJ KKKKA. . .4                                          "
echo "      KKA. 'KKKKK LJ KKKKK' .4KK                                          "
echo "      KKSSA. VKKK LJ KKKV .4SSKK                                          "
echo "               <><><><>                                                   "
echo "                'MKKM'                                                    "
echo "                  ''                                                      "
echo ""
echo "Welcome to System Installation Program on Unix And Linux"
echo ""

echo " 1) Install PHP Version 5.3 "
echo " 2) Install PHP Version 5.4 "
echo " 3) Install PHP Version 5.5 "
echo " 4) Install PHP Version 5.6 "
echo " 5) Back "
read -p "Select an option [1-4]: " option
echo ""
case $option in
1)
read -p "Do you want to install PHP Version 5.3? [y/n]: " -e -i n cent6_php53
if [[ "$cent6_php53" = 'y' ]]; then
	wget http://dl.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm
	wget http://rpms.famillecollet.com/enterprise/remi-release-6.rpm
	rpm -Uvh epel-release-6-8.noarch.rpm
	yum install php php-mcrypt php-cli php-gd php-curl php-mysql php-ldap php-zip php-fileinfo -y
	php -v
else
	cent6_php_menu
fi
exit
;;
2)
read -p "Do you want to install PHP Version 5.4? [y/n]: " -e -i n cent6_php54
if [[ "$cent6_php54" = 'y' ]]; then
	wget http://dl.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm
	wget http://rpms.famillecollet.com/enterprise/remi-release-6.rpm
	rpm -Uvh epel-release-6-8.noarch.rpm
	rpm -Uvh remi-release-6*.rpm
	yum install yum-utils -y
	yum-config-manager --enable remi-php54
	yum install php php-mcrypt php-cli php-gd php-curl php-mysql php-ldap php-zip php-fileinfo -y
	php -v
else
	cent6_php_menu
fi
exit
;;
3)
read -p "Do you want to install PHP Version 5.5? [y/n]: " -e -i n cent6_php55
if [[ "$cent6_php55" = 'y' ]]; then
	wget http://dl.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm
	wget http://rpms.famillecollet.com/enterprise/remi-release-6.rpm
	rpm -Uvh epel-release-6-8.noarch.rpm
	rpm -Uvh remi-release-6*.rpm
	yum install yum-utils -y
	yum-config-manager --enable remi-php55
	yum install php php-mcrypt php-cli php-gd php-curl php-mysql php-ldap php-zip php-fileinfo -y
	php -v
else
	cent6_php_menu
fi
exit
;;
4)
read -p "Do you want to install PHP Version 5.6? [y/n]: " -e -i n cent6_php56
if [[ "$cent6_php56" = 'y' ]]; then
	wget http://dl.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm
	wget http://rpms.famillecollet.com/enterprise/remi-release-6.rpm
	rpm -Uvh epel-release-6-8.noarch.rpm
	rpm -Uvh remi-release-6*.rpm
	yum install yum-utils -y
	yum-config-manager --enable remi-php56
	yum install php php-mcrypt php-cli php-gd php-curl php-mysql php-ldap php-zip php-fileinfo -y
	php -v
else
	cent6_php_menu
fi
exit
;;
5)
	cent6_menu
exit
;;

esac
done
}
